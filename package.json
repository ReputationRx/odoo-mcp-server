{
  "name": "@odoo/mcp-server",
  "version": "1.0.0",
  "description": "Production-ready MCP Server for Odoo integration",
  "main": "dist/index.js",
  "type": "module",
  "scripts": {
    "build": "tsc",
    "start": "node dist/index.js",
    "dev": "tsx watch src/index.ts",
    "dev:api": "MCP_MODE=api tsx watch src/index.ts",
    "dev:mcp": "MCP_MODE=mcp tsx watch src/index.ts",
    "create-admin-key": "tsx scripts/create-admin-key.ts",
    "test": "jest",
    "lint": "eslint src --ext .ts",
    "format": "prettier --write \"src/**/*.ts\"",
    "package": "npm run build && npm run package:create",
    "package:create": "node scripts/create-package.js",
    "prepublishOnly": "npm run build"
  },
  "keywords": [
    "mcp",
    "odoo",
    "model-context-protocol",
    "api",
    "integration"
  ],
  "author": "Your Name <your.email@example.com>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/yourusername/odoo-mcp-server.git"
  },
  "homepage": "https://github.com/yourusername/odoo-mcp-server#readme",
  "bugs": {
    "url": "https://github.com/yourusername/odoo-mcp-server/issues"
  },
  "support": "your.email@example.com",
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.0.4",
    "express": "^4.18.2",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "zod": "^3.22.4",
    "xmlrpc": "^1.3.2",
    "axios": "^1.6.2",
    "rate-limiter-flexible": "^5.0.3",
    "winston": "^3.11.0",
    "winston-daily-rotate-file": "^4.7.1",
    "bcrypt": "^5.1.1",
    "jsonwebtoken": "^9.0.2",
    "sqlite3": "^5.1.6",
    "better-sqlite3": "^9.2.2"
  },
  "devDependencies": {
    "@types/express": "^4.17.21",
    "@types/node": "^20.10.5",
    "@types/cors": "^2.8.17",
    "@types/xmlrpc": "^1.3.4",
    "@types/bcrypt": "^5.0.2",
    "@types/jsonwebtoken": "^9.0.5",
    "@typescript-eslint/eslint-plugin": "^6.15.0",
    "@typescript-eslint/parser": "^6.15.0",
    "eslint": "^8.56.0",
    "prettier": "^3.1.1",
    "tsx": "^4.7.0",
    "typescript": "^5.3.3"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
